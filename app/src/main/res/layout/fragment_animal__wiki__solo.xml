<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.Animal_Wiki_Solo">

    <!-- Display animal name -->
    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Name"
        android:layout_marginBottom="40dp"
        android:textSize="24sp" />

    <!-- Display Hebrew name -->
    <TextView
        android:id="@+id/hebrew_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hebrew Name"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

    <!-- Display Endangered Level -->
    <TextView
        android:id="@+id/endangered_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endangered Level"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

    <!-- Display Type -->
    <TextView
        android:id="@+id/type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

    <!-- Display Animal Image -->
    <ImageView
        android:id="@+id/animal_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />
</LinearLayout>
