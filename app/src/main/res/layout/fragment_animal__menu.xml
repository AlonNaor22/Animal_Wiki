<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88FFC107"
    android:orientation="vertical"
    tools:context=".fragments.Animal_Menu">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/display_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="30dp"
        android:text="Display Info" />

    <Button
        android:id="@+id/display_animal_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Display animals" />

    <Button
        android:id="@+id/display_animal_of_the_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Display animal of the day" />

</LinearLayout>